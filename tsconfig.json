{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["./app"],
      "@assets": ["./assets"],
      "@components": ["./app/components"],
      "@config": ["./app/config"],
      "@hooks": ["./app/hooks"],
      "@lib/*": ["./app/lib/*"],
      "@navigators": ["./app/navigators"],
      "@screens/*": ["./app/screens/*"],
      "@services/*": ["./app/services/*"],
      "@theme": ["./app/theme"],
      "@utils/*": ["./app/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "App.js", "index.ts", "app", "typings"],
  "extends": "expo/tsconfig.base"
}
